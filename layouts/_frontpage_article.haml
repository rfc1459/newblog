- hero ||= false

- if hero
  - cls = "hero-unit"
- else
  - cls = "span4"
%div{:class => cls}
  - if hero
    %h1= item[:title]
  - else
    %h2= item[:title]
  = render('_metadata_partial', {:item => item, :embedded => true})
  = article_summary(item)
  %p
    - if hero
      %a.btn.btn-primary.btn-large{:href => url_for_article(item)} Leggi &raquo;
    - else
      %a.btn{:href => url_for_article(item)} Leggi &raquo;
