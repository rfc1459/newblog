.well.well-small.sidebar-nav
  %ul.nav.nav-list
    %li.nav-header
      %i{:class => "icon-#{block[:icon]}"}
      = block[:title]
    - block[:entries].each do |item|
      %li{:class => is_current_item?(item) && "active"}
        - if item.has_key?(:icon)
          %a{:href => item[:href]}
            %i{:class => "icon-#{item[:icon]}"}
            = item[:title]
        - else
          %a{:href => item[:href]}= item[:title]
